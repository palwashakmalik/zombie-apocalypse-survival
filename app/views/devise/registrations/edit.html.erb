<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>
  <fieldset>
    <legend>New Location:</legend>
    <%= f.fields_for 'locations_attributes[]', @location do |locations_form| %>
      <%= render "location_fields", f: locations_form %>
    <% end %>
  </fieldset>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
